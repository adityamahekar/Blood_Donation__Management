<!-- profile.ejs -->
<div class="max-w-xl mx-auto bg-white shadow-lg rounded-lg p-6 space-y-4">
  <h2 class="text-2xl font-bold text-center text-red-600 mb-4">Your Profile</h2>

  <div class="flex justify-between border-b pb-2">
    <span class="text-gray-600 font-medium">Name:</span>
    <span class="text-gray-800"><%= user.name %></span>
  </div>

  <div class="flex justify-between border-b pb-2">
    <span class="text-gray-600 font-medium">Email:</span>
    <span class="text-gray-800"><%= user.email %></span>
  </div>

  <div class="flex justify-between border-b pb-2">
    <span class="text-gray-600 font-medium">Phone:</span>
    <span class="text-gray-800"><%= user.phone %></span>
  </div>

  <div class="flex justify-between border-b pb-2">
    <span class="text-gray-600 font-medium">Blood Group:</span>
    <span class="text-gray-800"><%= user.blood_group %></span>
  </div>

  <div class="flex justify-between border-b pb-2">
    <span class="text-gray-600 font-medium">Age:</span>
    <span class="text-gray-800"><%= user.age %></span>
  </div>

  <div class="flex justify-between border-b pb-2">
    <span class="text-gray-600 font-medium">Weight:</span>
    <span class="text-gray-800"><%= user.weight %> kg</span>
  </div>

  <div class="flex justify-between">
    <span class="text-gray-600 font-medium">Address:</span>
    <span class="text-gray-800"><%= user.address %></span>
  </div>
</div>
